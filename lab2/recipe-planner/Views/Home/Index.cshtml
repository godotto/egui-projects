@model List<RecipeModel>

@{
    ViewData["Title"] = "recipe list";
}
<div class="container">
    <div class="row">
        <div class="col-9">
            <table class="table table-hover table-border">
                @for (var index = 0; index < Model.Count; index++)
                {
                    <tr>
                        <td>@Model[index].Name</td>
                        <td style="text-align: end;">
                            <div class="btn-group">
                                <button class="btn btn-success btn">Edit</button>
                                <a class="btn btn-danger btn" asp-action="DeleteRecipe" asp-route-id="@index">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </table>
        </div>
        <div class="col-3">
            <div class="btn-group-vertical">
                <a class="btn btn-outline-primary btn-lg" asp-action="NewRecipe">Add</a>
                <button type="button" class="btn btn-outline-primary btn-lg">Create menu</button>
            </div>
        </div>
    </div>
</div>